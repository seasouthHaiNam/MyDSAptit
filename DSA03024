#include<bits/stdc++.h>
using namespace std;
bool cmp(const pair<int,int>&a,const pair<int,int>&b){
    return a.second<b.second;
    }
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        pair<int,int>a[n];
        for(int i=0;i<n;i++){
            cin>>a[i].first>>a[i].second;
        }
        sort(a,a+n,cmp);
        int cnt=0;
        int temp=0;
        for(int i=0;i<n;i++){
            if(a[i].first>=temp){
                    cnt++;
                    temp=a[i].second;
        }
    }
    cout<<cnt<<endl;

    }
}
